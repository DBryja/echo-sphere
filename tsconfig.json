{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@globals/*": ["src/app/(app)/styles/*"],
      "@components/*": ["src/app/(app)/components/*"],
      "@hooks/*": ["src/app/(app)/hooks/*"],
      "@providers/*": ["src/app/(app)/providers/*"],
      "@utils/*": ["src/app/(app)/utils/*"],
      "@app/*": ["src/app/(app)/*"],
      "/src/*": ["/src/*"],
      "@payload-config": ["./src/payload.config.ts"]
    },
    "target": "ES2019"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
